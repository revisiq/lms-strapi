{
  "kind": "collectionType",
  "collectionName": "questions",
  "info": {
    "singularName": "question",
    "pluralName": "questions",
    "displayName": "Question",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "question": {
      "type": "string",
      "required": true,
      "maxLength": 150
    },
    "answer": {
      "type": "text",
      "maxLength": 180
    },
    "hint": {
      "type": "string",
      "maxLength": 80
    },
    "example": {
      "type": "string"
    },
    "decks": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::deck.deck",
      "inversedBy": "questions"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "questions"
    },
    "explanation": {
      "type": "string",
      "maxLength": 300
    },
    "stimulus": {
      "type": "text"
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "easy",
        "medium",
        "hard"
      ],
      "required": true,
      "default": "medium"
    },
    "group_id": {
      "type": "string"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "MCQ",
        "RC",
        "Parajumble",
        "Syllogism",
        "SentenceCompletion",
        "Other"
      ],
      "default": "MCQ",
      "required": true
    },
    "options": {
      "type": "component",
      "repeatable": true,
      "component": "question.option"
    }
  }
}
